<Page x:Class="TeaCompanyProduction.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TeaCompanyProduction.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button x:Name="BListOfTea"
                    Content="Список чая"
                    Click="BListOfTea_Click" />
            <Button x:Name="BAddInStock"
                    Content="Оформить приход"
                    
                    Click="BAddInStock_Click" />
            <Button x:Name="BProductionHistory"
                    Content="История производства"
                    Click="BProductionHistory_Click" />
        </StackPanel>
        <Frame x:Name="MainMenuFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
